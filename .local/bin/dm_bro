#!/bin/sh
dmenufont='Hack-9'
dmenunb='#1c2023'
dmenunf='#f3f4f5'
dmenusb='#c795ae'
dmenusf='#1c2023'
surfun='#c7ae95'

chosen=$(printf "Firefox\nPrivate\nSurf" | dmenu -c -p "Browser" -fn $dmenufont -nb $dmenunb -nf $dmenunf -sb $dmenusb -sf $dmenusf)

if [ -z $1 ]
then
	case $chosen in
		Firefox) firefox;;
		Private) firefox --private-window "https://duckduckgo.com";;
		*) notify-send "dmenu-browser" "Could not resolve browser string";;
	esac
else
	case $chosen in
		Firefox) firefox "$1";;
		Private) firefox --private-window "$1";;
		*) $BROWSER "$1";;
	esac
fi
