#!/bin/sh

list="\
firefox:st
Web browse:firefox
feh:feh ~/pictures/wallpapers/*
sxiv:sxiv -t  ~/pictures/wallpapers/*
vim:st -e nvim
geany:geany
gimp:gimp
mutt:st -e mutt
transmission:transmission-gtk
alsa mixer:st -e alsamixer
mpv:mpv
customize Look & Feel:lxappearance
htop:st -e htop

selection="$(echo "$list" |
	grep -Eo '^[A-Za-z-]+' |
	dmenu -p ":" -b $@)" || exit 1
tosubstr="$(echo "$list" |
	grep -F "$(echo "$selection" | grep -Eo "^\\S*"):")"

sh -c "${tosubstr#*:}"
