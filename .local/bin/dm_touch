#!/usr/bin/env sh

# Quickly start creating a new script.

Directory=$(find "$HOME/.local/bin" -maxdepth 2 -type d \
    | dmenu -c -g 1 -l 50 -p 'Save:')
[ -z "$Directory" ] && exit 1

Name=$(printf '' | dmenu -c -g 1 -l 50 -p 'Name:')
[ -z "$Name" ] && exit 1

Script="$Directory/$Name"
touch "$Script"
chmod +x "$Script"
ln -sf "$Script" "$LBIN"
printf '%s\n\n# ' '#!/usr/bin/env sh' > "$Script"

$EDITOR "$Script"
