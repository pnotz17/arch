#!/bin/bash
link=$(xclip -selection clipboard -o)
DMENU='dmenu -c -g 1'

chosen=$(echo -e "stream\nplaylist-stream\nplaylist-download\nvideo\naudio\nbdl\ngallery" | $DMENU -p "What action?")

case "$chosen" in
	stream)
		mpv $(youtube-dl -g $link) --no-fullscreen --video-on-top
		exit 1
	;;
	playlist-stream)
		play=~/playlist.m3u
		# play=/tmp/playlist.m3u
		youtube-dl -g $link >> $play
		st --new-tab -e "vlc $play"
		exit 1
	;;
	playlist-download)
		st --new-tab -e "youtube-dl --extract-audio --audio-format mp3 --audio-quality 0 --yes-playlist -o '' --download-archive '' $link"
		exit 1
	;;
	video)
		st -e "youtube-dl $link"
		exit 1
	;;
	audio)
		st --new-tab -e "youtube-dl --extract-audio --audio-format mp3 --audio-quality 0 $link"
		exit 1
	;;
	bdl)
		st --new-tab -e "bandcamp-dl $link"
		exit 1
	;;
	gallery)
		st --new-tab -e "gallery-dl $link"
		exit 1
	;;
esac
