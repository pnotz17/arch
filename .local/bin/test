#!/bin/sh
# a dmenu script for different power options

action=$(printf "Open in mpv\nShutdown\nReboot\nHibernate\nSuspend\nLock screen\nChange Theme" | dmenu)

case $action in
    "Open in mpv")
        mpv "$(xclip -o -sel clip)"
        ;;
    "Change Theme")
        sxiv -to "$HOME/pics/wallpaper"
        ;;
    "Shutdown")
        systemctl poweroff
        ;;
    "Reboot")
        systemctl reboot
        ;;
    "Suspend")
        systemctl suspend
        ;;
    "Hibernate")
        systemctl hibernate
        ;;
    "Lock screen")
        betterlockscreen -l
        ;;
    *)
        exit 1
        ;;
esac

