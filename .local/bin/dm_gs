#!/bin/sh
browser=${BROWSER:-firefox}

pgrep -x dmenu && exit

choice=$(echo "" | dmenu -c -g 1 -p "Search Google:") || exit 1

if [ "$choice" = ""  ]; then
    $browser "https://google.com"
else
    if echo "$choice" | grep "^(http:\/\/|https:\/\/)?[a-zA-Z0-9]+\.[a-zA-Z]+(/)?.*$"; then
        $browser "$choice"
    else
        $browser "https://google.com/search?q=$choice"
    fi
fi
