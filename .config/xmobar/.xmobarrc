Config { 
font   = "xft: mononoki Nerd Font:style=Regular:pixelsize=13:antialias=true:hinting=true"
         bgColor = "#080808"
       , fgColor = "#b3afc2"     
       , position = TopW L 100
       , lowerOnStart = True
       , hideOnStart = False
       , allDesktops = True
       , persistent = True
       , iconRoot = "/home/panos21/.xmonad/xpm/"  -- default: "."
	   , commands = [ 
									  Run UnsafeStdinReader
									, Run Com "/home/panos21/.local/bin/pacupdate" [] "pacupdate" 36000
									, Run Com "/home/panos21/.local/bin/temp.sh" [] "temp" 2
									, Run Cpu ["-t", "cpu:   (<total>%)","-H","70","--high","red"] 20
									, Run Memory ["-t", "mem:   <used>M (<usedratio>%)"] 20
									, Run Com "/home/panos21/.local/bin/getvolume.sh" [] "vol" 2
									, Run Com "/home/panos21/.local/bin/netspeed.sh" [] "netspeed" 20
									, Run Date "%b %d %Y (%H:%M)" "date" 50
									]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "<action=`xdotool key control+alt+g`><icon=haskell_20.xpm/></action><fc=#b3afc2>|</fc> %UnsafeStdinReader% }{ <fc=#b3afc2> %cpu% </fc><fc=#b3afc2>|</fc><fc=#b3afc2> %memory% </fc><fc=#b3afc2>| <fc=#b3afc2>%netspeed% </fc><fc=#b3afc2>|</fc></fc><fc=#b3afc2> vol:   %vol% </fc><fc=#b3afc2>| </fc><fc=#b3afc2>  %date% </fc>"
       }
