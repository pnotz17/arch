[colors]
background = #F20A0A0A
foreground = #999999
alert = #FF0000
sep = #999999

[bar/mybar]
;monitor = ${env:MONITOR:VGA1}
width = 100%
height = 20
offset-x = 0%
offset-y = 0%
radius = 0.0
fixed-center = true
bottom = false
;border-size = 0
;border-color = ;00000000
line-size = 2
;line-color = "#f00"
background = ${colors.background}
foreground = ${colors.foreground}
wm-restack = bspwm
;override-redirect = true
;enable-ipc = true
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1
cursor-click = pointer

font-0 =" Ubuntu Nerd Font:style=Book:pixelsize=11:antialias=true:hinting=true"

modules-left = bspwm
modules-center =
modules-right = sep cpu sep memory sep alsa sep speedup sep speeddown sep time sep

;tray-position = right
;tray-background = ${colors.background}

[bar/herbst]
;monitor = ${env:MONITOR:VGA1}
width = 100%
height = 20
offset-x = 0%
offset-y = 0%
radius = 0.0
fixed-center = true
bottom = false
;border-size = 0
;border-color = ;00000000
line-size = 2
;line-color = "#f00"
background = ${colors.background}
foreground = ${colors.foreground}
;override-redirect = true
;enable-ipc = true
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1
cursor-click = pointer

font-0 =" Ubuntu Nerd Font:style=Book:pixelsize=11:antialias=true:hinting=true"

modules-left = ewmh
modules-center =
modules-right = sep cpu sep memory sep alsa sep speedup sep speeddown sep time sep

;tray-position = right
;tray-background = ${colors.background}

scroll-up = herbstclient use_index -1
scroll-down = herbstclient use_index +1

; MODULES A-Z  
[module/bspwm]
type = internal/bspwm
enable-click = true
enable-scroll = true
reverse-scroll = true
pin-workspaces = true

ws-icon-0 = 1;dev
ws-icon-1 = 2;www
ws-icon-2 = 3;code
ws-icon-3 = 4;sys
ws-icon-4 = 5;doc
;ws-icon-5 = VI;
;ws-icon-6 = VII;
;ws-icon-7 = VIII;
;ws-icon-8 = IX;
;ws-icon-9 = X;
ws-icon-default = " "

format = <label-state> <label-mode>
label-focused = %icon%
label-focused-background = ${colors.background}
label-focused-underline = ${colors.sep}
label-focused-padding = 2
label-focused-foreground = ${colors.foreground}
label-occupied = %icon%
label-occupied-padding = 2
label-occupied-background = ${colors.background}
label-urgent = %icon%
label-urgent-padding = 2
label-empty = %icon%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2
label-empty-background = ${colors.background}
label-monocle = "   "
label-monocle-foreground = ${colors.foreground}
label-tiled = "   "
label-tiled-foreground = ${colors.foreground}
label-fullscreen = "  "
label-fullscreen-foreground = ${colors.foreground}
label-floating = "   "
label-floating-foreground = ${colors.foreground}
label-pseudotiled = "   "
label-pseudotiled-foreground = ${colors.foreground}
label-locked = "   "
label-locked-foreground = ${colors.foreground}
label-sticky = "   "
label-sticky-foreground = ${colors.foreground}
label-private =  "    "
label-private-foreground = ${colors.foreground}

format-foreground = ${colors.foreground}
format-background = ${colors.background}

label-separator = |
label-separator-padding = 0
label-separator-foreground = ${colors.sep}

[module/ewmh]
type = internal/xworkspaces
enable-click = true
enable-scroll = true
reverse-scroll = true
pin-workspaces = true

;       v   

icon-1 = 1;
icon-2 = 2;
icon-3 = 3;
icon-4 = 4;
icon-5 = 5;
icon-6 = 6;
icon-7 = 7;
icon-8 = 8;
icon-9 = 9;
icon-0 = 0;
icon-default = " "

format = <label-state> 
label-monitor = %icon% 

label-active =  %icon%
label-active-foreground = ${colors.alert}
label-active-background = #000
label-active-padding = 2

;label-occupied = %icon%
label-occupied-foreground = ${colors.alert}
label-occupied-background = #000
label-occupied-padding = 2

label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-urgent-background = #000
;label-urgent-underline = ${colors.foreground}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.foreground}
label-enpty-background = #00000000
label-empty-padding = 2

[module/sep]
type = custom/text
content =" | "
content-foreground = ${colors.sep}

[module/pacman-updates]
type = custom/script
exec =~/.local/bin/modules/sb_updates
interval = 100
label =%output%
format-foreground =${colors.alert}

[module/pkgs]
type = custom/script
exec = pacman -Q  |  wc -l
format-prefix = "   "
interval = 100
label =  %output%

[module/imap]
type = custom/script
exec = python3 ~/.local/bin/imap.py
interval = 100
label = %output%
format-prefix = "  "
click-left = st -e mutt &

[module/weather]
type = custom/script
exec = ~/.local/bin/weathersimple.sh
interval = 100
format = <label>
format-prefix = "  "

[module/temp]
type = custom/script
exec =~/.local/bin/temp.sh
label = "%output%"
format-prefix="  "

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
label = %percentage_used%%

[module/alsa]
type = internal/alsa
master-mixer = Master
format-volume-padding = 1
label-volume  =   %percentage%
format-volume =<label-volume>
label-muted = " muted "
label-muted-foreground = ${colors.alert}

[module/speedup]
type = internal/network
interface = "enp2s0"
interval = 1.0
label-connected = "  %upspeed%"

[module/speeddown]
type = internal/network
interface = "enp2s0"
interval = 1.0
label-connected = "  %downspeed%"

[module/time]
type = custom/script
exec =date +"  %b %d, %R"
interval = 1

