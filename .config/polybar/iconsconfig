[colors]
background = #0A0A0A
foreground = #999999
alert = #FF0000
sep = #ffb52a

[bar/bspwm]
monitor = ${env:MONITOR:VGA1}
width = 100%
height = 20
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

;line-size = 2
;line-color = "#f00"

wm-restack = bspwm
;override-redirect = true

; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
;enable-ipc = true

;border-size = 0
;border-left-size = 0
;border-right-size = 25
;border-top-size = 0
;border-bottom-size = 25
;border-color = ;00000000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 ="UbuntuMono Nerd Font:style=Regular:pixelsize=11:antialias=true:hinting=true"

modules-left = bspwm
modules-center =
modules-right = pacman-updates sep weather sep filesystem sep pkgs sep imap sep temp sep cpu sep memory sep network sep date sep time sep

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

;tray-detached = false
;tray-offset-x = 0
;tray-offset-y = 0
;tray-padding = 2
;tray-maxsize = 22
;tray-scale = 1.0
;tray-position = right
;tray-background = ${colors.background}

; MODULES A-Z  

[module/bspwm]
type = internal/bspwm

enable-click = true
enable-scroll = true
reverse-scroll = true
pin-workspaces = true

ws-icon-0 = I;	
ws-icon-1 = II;"
ws-icon-2 = III;"
ws-icon-3 = IV;
ws-icon-4 = V;
;ws-icon-5 = VI;
;ws-icon-6 = VII;
;ws-icon-7 = VIII;
;ws-icon-8 = IX;
;ws-icon-9 = X;
ws-icon-default = " "

format = <label-state> <label-mode>

label-focused = %icon%
label-focused-background = ${colors.background}
label-focused-padding = 2
label-focused-foreground = ${colors.foreground}

label-occupied = %icon%
label-occupied-padding = 2
label-occupied-background = ${colors.background}

label-urgent = %icon%
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2
label-empty-background = ${colors.background}
label-monocle = "  "
label-monocle-foreground = ${colors.foreground}
label-tiled = "  "
label-tiled-foreground = ${colors.foreground}
label-fullscreen = "  "
label-fullscreen-foreground = ${colors.foreground}
label-floating = "  "
label-floating-foreground = ${colors.foreground}
label-pseudotiled = "  "
label-pseudotiled-foreground = ${colors.foreground}
label-locked = "  "
label-locked-foreground = ${colors.foreground}
label-sticky = "  "
label-sticky-foreground = ${colors.foreground}
label-private =  "     "
label-private-foreground = ${colors.foreground}

format-foreground = ${colors.foreground}
format-background = ${colors.background}

; Separator in between workspaces
label-separator = |
label-separator-padding = 0
label-separator-foreground 				= ${colors.sep}

[module/sep]
type = custom/text
content =" | "
content-foreground = ${colors.sep}

[module/pacman-updates]
type = custom/script
exec =./.local/bin/updates.sh
interval = 100
label =%output%
format-foreground =${colors.alert}

[module/kernel]
type = custom/script
exec = uname -r
tail = false
interval = 1024
format-prefix = "   "

[module/filesystem]
type = internal/fs
interval = 25
label-mounted-foreground =colors.foreground}

mount-0 = /

label-mounted =   %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.primary}

[module/pkgs]
type = custom/script
exec = pacman -Q  |  wc -l
format-prefix = "   "
interval = 100
label =  %output%

[module/imap]
type = custom/script
exec = python3 ~/.local/bin/imap.py
interval = 100
label = %output%
format-prefix = "  "
click-left = st -e mutt &

[module/weather]
type = custom/script
exec = ~/.local/bin/weathersimple.sh
interval = 100
format = <label>
format-prefix = "  "

[module/temp]
type = custom/script
exec =~/.local/bin/temp.sh
label = "%output%"
format-prefix="  "

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
label = %percentage_used%%

[module/alsa]
type = internal/alsa
master-mixer = Master
format-volume-padding = 1
label-volume  =   %percentage%
format-volume =<label-volume>
label-muted = " muted "
label-muted-foreground = ${colors.alert}

[module/network]
type = internal/network
interface = "enp2s0"
interval = 1.0
label-connected = "  %downspeed%    %upspeed%"

[module/date]
type = custom/script
exec =date +"  %a, %d %b"
interval = 1

[module/time]
type = internal/date
interval = 5
time ="  %I:%M"
time-alt = %H:%M:%S
label = %time%
